# Exercicio 2.1 Converta as seguintes expressões matematicas para que possam ser calculadas usando python

print(10 + 20 * 30)

# os numeros abaixo estam no livro pag 45 de python
print(4 ** 2 / 30)
print(9 ** 4 + 2 * 6 - 1)

# Exercicio 2.2 Digite a expressao no interpretador
print(10 % 3 * 10 ** 2 + 1 - 10 * 4 / 2)

# faça um programa que exiba seu nome na tela
print("olá, Meu nome é Lucas")

# Escreva um programa que exiba o resultado de 2a x 3b, em que a vale 3 e b vale 5
a = 3
b = 5
print(2*a*3*b)

# Escreva um programa que calcule a soma de tres variaveis e imprima o resultado na tela
c = 2
d = 4
e = 6
print(c+d+e)

# Modifique o programa 2.2 de forma que ele calcule um aumento de 15% para um salário de R$ 750.
salario = 750
aumento = 15
print(salario+(salario*aumento/100))

# Projeto conversor de moedas
#conversor de moedas
real = float(input(" Quanto de R$ tenho na carteira ? R$ "))
dolar = real/5.05
euro = real/5.51
iene = real/0.03814
print(" com R$ {:.2f} reais e possivel ter R$ {:.2f} dolares.  \n Em euros {:.2f}. em ienes {:.2f}".format(real,dolar,euro,iene))

#exercicio 3.7 
n1 = int(input("Digite o primeiro numero: "))
n2 = int(input("Digite o outro numero : "))
s = n1+n2
print(f" a soma entre {n1} e {n2} = {s}")

#exercicio 3.8
metros = float(input("digite o valor em metros :"))
milimetros = metros *1000
print(f"o valor metros {metros:.3f} em milimetros = {milimetros:.3f}")


#exercicio 3.9
dias = int(input("quantidade de dias : ? "))
horas = int(input("quantidade de horas : ? "))
minutos = int(input("quantidade de minutos : ? "))
segundos = int(input("quantidade de segundos : ? "))
total_de_segundos = dias * 24 * 3600 +horas *3600 + minutos * 60 + segundos
print(total_de_segundos)

#exercicio 3.10
salario = float(input("Digite seu salario R$ "))
aumento = float(input("Aumento de "))
total_c_a = salario + salario * aumento /100
print(f"\nvalor do salario anterior {salario:.2f} \nnovo aumento de %{aumento:.2f} \salario atula com aumento atual com aumento {total_c_a:.2f}") 

#exercicio 3.11
mercadoria = float(input(" valor mercadoria: "))
desconto = float(input(" Desconto  : % "))
total = mercadoria - mercadoria * desconto /100
print(f"valor do desconto {desconto:.2f}")
print(f"novo valor com desconto {total:.2f}")
